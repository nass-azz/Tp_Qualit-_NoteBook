<Window x:Class="notebook.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notebook" Height="500" Width="800" Background="#f0f0f0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Mon Notebook" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Saisir les Matières" Width="220" Height="50" Background="#4CAF50"
        Foreground="White" FontWeight="Bold" BorderThickness="0" Click="SaisirMatieres_Click"/>

                <Button Content="Rentrer Un Examen" Width="220" Height="50" Background="#2196F3"
        Foreground="White" FontWeight="Bold" BorderThickness="0" Click="RentrerExamen_Click"/>

                <Button Content="Afficher Les Moyens" Width="220" Height="50" Background="#FF9800"
        Foreground="White" FontWeight="Bold" BorderThickness="0" Click="AfficherMoyens_Click"/>
                <Button Content="List Exams" Click="GoListExams" Width="120" Height="30" Margin="10"/>

            </StackPanel>

            <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="15" Background="White" Padding="10" >
                <Image Source="/Image/Livre.jpg" Width="200" Height="200" Stretch="Uniform"/>
            </Border>
        </Grid>
    </Grid>
</Window>
