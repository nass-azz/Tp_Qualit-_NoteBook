<Window x:Class="notebook.EditUnitsAndModulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Units and Modules" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Section Unités -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Course Units:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="UnitsList" DisplayMemberPath="Name" Height="250" MouseDoubleClick="UnitsList_DoubleClick" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add" Width="80" Margin="5" Click="AddUnit"/>
                <Button Content="Remove" Width="80" Margin="5" Click="DeleteUnit"/>
            </StackPanel>
        </StackPanel>

        <!-- Section Modules -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Modules:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="ModulesList" DisplayMemberPath="Name" Height="250" MouseDoubleClick="ModulesList_DoubleClick"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Add" Width="80" Margin="5" Click="AddModule"/>
                <Button Content="Remove" Width="80" Margin="5" Click="DeleteModule"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
